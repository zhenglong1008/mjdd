/* pages/home/home.wxss */

.banner {
  height: 480rpx;
}

.recommend {
  border-top: 20rpx solid #eee;
  border-bottom: 20rpx solid #eee;
}

.recommend-title {
  text-align: center;
  padding: 20rpx;
  color: #c81912;
}

.recommend-image {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  flex-wrap: wrap;
}

.recommend-image image {
  height: 140rpx;
  width: 140rpx;
  border-radius: 70rpx;
  margin: 10rpx;
}

.h-goods {
  display: flex;
  flex-direction: column;
}
.h-goods-box {
  padding: 30rpx 30rpx 0 30rpx;
}
.h-goods-content {
  display: flex;
  justify-content: space-between;
  border-top: 3rpx solid #eee;
  border-bottom: 3rpx solid #eee;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.h-goods-content image {
  width: 200rpx;
  height: 200rpx;
}

.h-goods-text {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 530rpx;
  font-size: 32rpx
}

.text-weight {
  font-weight: 600
}



.goods-head text {
  color: #c81912;
  text-align: center;
  display: block;
}

.goods-head {
  padding: 20rpx;
}

.goods-items {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-around;
  font-size: 28rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.goods-items image {
  width: 350rpx;
  height: 420rpx;
}

.items {
  padding: 20rpx 0;
}

.my-yellow-1 {
  background-color: #eef9bf;
}
